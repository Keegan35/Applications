<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    tools:context="com.ebookfrenzy.opsc7312_assign2_15003770.SignIn">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:gravity="center">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:theme="@style/TextLabel1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtCName"
        android:layout_alignParentEnd="true"
        android:hint="Child Name"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>
    </android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textColorHint="@android:color/white"
    android:theme="@style/TextLabel1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtAge"
        android:layout_alignParentEnd="true"
        android:hint="Age"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textColorHint="@android:color/white"
    android:theme="@style/TextLabel1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtParent"
        android:layout_alignParentEnd="true"
        android:hint="Parent Name"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textColorHint="@android:color/white"
    android:theme="@style/TextLabel1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtNo"
        android:layout_alignParentEnd="true"
        android:hint="Contact Number"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:textColorHint="@android:color/white"
    android:theme="@style/TextLabel1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/edtTime"
        android:hint="Time"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>
</android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/camera"
        android:id="@+id/ivParent"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

        <Button
            android:text="Take Picture of Parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btnParentPic"
            android:textColor="@android:color/white"
            android:background="@drawable/btnshapesign"
            android:gravity="center" />

        <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/camera"
        android:id="@+id/ivChild"
            android:gravity="center"
            android:layout_marginTop="25dp"/>

    <Button
        android:text="Take Picture of Child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnChildPic"
        android:textColor="@android:color/white"
        android:background="@drawable/btnshapesign"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here to accept Ts n Cs"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>
</ScrollView>
